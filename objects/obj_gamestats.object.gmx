            <string>///transactions
var status=string(ds_map_find_value(async_load, "type" ));

//// اگر محصول مصرفی باشد ////
if(status == "onConsumablePurchased")
{
    var product_id = string(ds_map_find_value(async_load, "element" ));
    show_message_async(" با موفقیت خریداری شد.");
    if(product_id=="hr_coins_1100")
    {
        scr_coins_add(1100);
    }
    else if(product_id=="hr_coins_3000")
    {
        scr_coins_add(3000);
    }
    else if(product_id=="hr_coins_10000")
    {
        scr_coins_add(10000);
    }
    else if(product_id=="hr_ep_1")
    {
        scr_stat_update("stb", true);
        changed = true;
    }
    else if(product_id=="hr_weaponmaster")
    {
        scr_stat_update("wm", true);
        changed = true;
    }
    else if(product_id=="hr_armorer")
    {
        scr_stat_update("am", true);
        changed = true;
    }
}
//// اگر محصول غیرمصرفی باشد ////
else if(status == "onNonConsumablePurchased")
{
    var product_id = string(ds_map_find_value(async_load, "element" ));
    //show_message_async("محصول "+product_id+" با موفقیت خریداری شد.");
    show_message_async("خرید با موفقیت انجام شد. با تشکر");
    if(product_id=="mdIAB_adss")
    {
        global.ads=false;
    }
}
//// اگر پرداخت انجام نشود ////
else if(status == "onPurchaseFail")
{
    show_message_async("پرداخت انجام نشد.");
}
</string>
